services:
  db:
    image: postgres:16
    environment:
      - POSTGRES_DB=rails_development
      - POSTGRES_USER=rails
      - POSTGRES_PASSWORD=password
    ports:
      - "5438:5432"
    volumes:
      - ruby_db:/var/lib/postgresql/data

  app:
    build:
      context: .
      dockerfile: Dockerfile
    command: "bin/rails server -b 0.0.0.0"
    ports:
      - "3000:3000"
    volumes:
      - .:/rails
    depends_on:
      - db
    environment:
      RAILS_ENV: "development"
      APP_DB_HOST: "db"
      APP_DB_NAME: "rails_development"
      APP_DB_USERNAME: "rails"
      APP_DB_PASSWORD: "password"
      APP_DB_PORT: 5432

volumes:
  ruby_db: {}
